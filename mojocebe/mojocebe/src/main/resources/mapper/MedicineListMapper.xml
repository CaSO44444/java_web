<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mojocebe.mapper.MedicineListMapper">
    <insert id="add" parameterType="com.example.mojocebe.dto.MedicineListDto">
        INSERT INTO medicine_list (id, patient_id, doctor_id, medicine_id)
        VALUES (#{id}, #{patient_id}, #{doctor_id}, #{medicine_id})
    </insert>

    <select id="getByPid" parameterType="int" resultType="com.example.mojocebe.dto.MedicineListDto">
        SELECT * FROM medicine_list WHERE patient_id = #{patient_id}
    </select>

    <select id="getByDid" parameterType="int" resultType="com.example.mojocebe.dto.MedicineListDto">
        SELECT * FROM medicine_list WHERE patient_id = #{doctor_id}
    </select>

</mapper>

